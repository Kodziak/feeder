<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.feeder.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_login"
        android:name="com.example.feeder.ui.login.LoginFragment"
        android:label="@string/title_login"
        tools:layout="@layout/fragment_login" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.feeder.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_add_rss"
        android:name="com.example.feeder.ui.listing.AddRSSFragment"
        android:label="@string/title_add_rss"
        tools:layout="@layout/fragment_add_rss" />

    <fragment
        android:id="@+id/navigation_listing"
        android:name="com.example.feeder.ui.listing.ListingFragment"
        android:label="@string/title_listing"
        tools:layout="@layout/fragment_listing" />
</navigation>