<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:transitionName="event_details_transition"
    >

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/eventToolbar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_baseline_rss_feed_24"
            app:title="@string/app_name" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_x"
            android:layout_marginTop="125dp"
            android:text="Example blog post title"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_x"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="@dimen/margin_x"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Pellentesque blandit pellentesque blandit. Donec porttitor arcu et ante euismod fringilla. Phasellus odio massa, vestibulum eu feugiat eu, molestie sed erat. Praesent consectetur non tellus vel volutpat. Donec vel luctus massa, sed rutrum dui. Sed ac porttitor enim, at vehicula sapien. Ut sollicitudin orci at suscipit auctor. Proin a neque felis. Etiam mollis nunc ut sodales euismod. Mauris purus metus, dictum ac nisl ut, ultrices imperdiet mauris. Vestibulum leo nisl, euismod blandit nibh ut, fringilla consectetur eros. Vestibulum bibendum gravida lorem in luctus. "
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <Button
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_marginStart="@dimen/margin_x"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="@dimen/margin_x"
            android:ems="10"
            android:text="@string/view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>